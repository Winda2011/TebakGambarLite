<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi atau Ganti Soal" 
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Input untuk Level dan Nomor Soal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Level (1-10)"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etNomorSoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="No. Soal (1-10)"
                android:inputType="number"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etKata1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata 1"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etKata2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata 2" 
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivGambarPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPilihGambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Gambar"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Soal" />

    </LinearLayout>
</ScrollView>
